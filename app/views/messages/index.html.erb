<div class=" col-sm-12" style="height: 95vh;">
    <div class=" col-sm-12">
        <h1 class=" text-center">Messages</h1>
            <div id="messages" class="" style=" height: 80vh;overflow: scroll;">
                <%= render @messages %>
            </div>

    </div>

    <div class=" form-group text-right" style="position: absolute; bottom: 0" >
        <%= form_for @message, remote: true do |f| %>
            <div class="row" style="width: 100vw">
                <div class="col-sm-10">
                    <%= f.text_area :message ,class: "form-control", style: "height: 10vh"%>
                </div>
                <div class="col-sm-2">                
                    <%= f.submit ">", class: "form-control  btn btn-primary", style: "background: teal;height: 10vh" %>        
                </div>
            </div>
        <% end %>
    </div>
</div>